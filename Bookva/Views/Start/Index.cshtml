@inherits System.Web.Mvc.WebViewPage
@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en" data-ng-app="BookvaApp">
<head>
    <meta charset="UTF-8">
    <title>bookva</title>
</head>
<body id="body" data-ng-controller="mainController">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">Bookva</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li data-ng-show="!getToken()" class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li data-ng-show="!getToken()"><a href="#/login">Войти<span class="sr-only"></span></a></li>
                    <li data-ng-show="!getToken()"><a href="#/register">Регистрация</a></li>
                    <li data-ng-show="getToken()"><a data-ng-click="doLogout()">Выход</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <ng-view data-ng-cloak class="wrap"></ng-view>

    @Scripts.Render("~/bundles/vendor")
    @Scripts.Render("~/bundles/app")
    @Styles.Render("~/bundles/css")
</body>
</html>
